{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 1,
    "margin": 0,
    "modules-left": [
        "group/hardware",
        "niri/workspaces",
        "niri/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "wireplumber#sink",
        "backlight",
        "network",
        "battery",
        "group/session"
    ],
    "niri/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "ÔÜí",
            "default": "ÔÑå"
        }
    },
    "niri/window": {
        "format": "<span color='#FFD700'> Ôíà {title}</span>",
        "rewrite": {
            "(.*) - Mozilla Firefox": "üåé $1",
            "(.*) - zsh": "> [$1]"
        }
    },
    "custom/hardware-wrap": {
        "format": "Óú≤",
        "tooltip-format": "Resource Usage"
    },
    "group/hardware": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true
        },
        "modules": [
            "custom/hardware-wrap",
            "power-profiles-daemon",
            "cpu",
            "memory",
            "temperature",
            "disk"
        ]
    },
    "custom/session-wrap": {
        "format": "<span color='#63a4ff'> Ôëñ </span>",
        "tooltip-format": "Lock, Reboot, Shutdown"
    },
    "group/session": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true
        },
        "modules": [
            "custom/session-wrap",
            "custom/lock",
            "custom/reboot",
            "custom/power"
        ]
    },
    "custom/lock": {
        "format": "<span color='#00FFFF'> ÔÄ£ </span>",
        "on-click": "swaylock -c 000000",
        "tooltip": true,
        "tooltip-format": "Lock screen"
    },
    "custom/reboot": {
        "format": "<span color='#FFD700'> ÔÄ° </span>",
        "on-click": "systemctl reboot",
        "tooltip": true,
        "tooltip-format": "Reboot"
    },
    "custom/power": {
        "format": "<span color='#FF4040'> ÔÄë </span>",
        "on-click": "systemctl poweroff",
        "tooltip": true,
        "tooltip-format": "Power Off"
    },
    "clock": {
        "format": "{:%H:%M Û∞ÉÆ %B %d, %Y}",
        "format-alt": "{:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#d3c6aa'><b>{}</b></span>",
                "days": "<span color='#e67e80'>{}</span>",
                "weeks": "<span color='#a7c080'><b>W{}</b></span>",
                "weekdays": "<span color='#7fbbb3'><b>{}</b></span>",
                "today": "<span color='#dbbc7f'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "format": "Û∞òö {usage}%",
        "tooltip": true,
        "interval": 1,
        "on-click": "ghostty -e htop"
    },
    "memory": {
        "format": "Û∞çõ {}%",
        "interval": 1,
        "on-click": "ghostty -e htop"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": [
            "Û±ÉÉ",
            "Û∞îè",
            "Û±ÉÇ"
        ]
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
        "format-plugged": "Û∞ö• {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
    "network": {
        "format-wifi": "Û∞ñ© {essid} ({signalStrength}%)",
        "format-ethernet": "Û∞àÄ {ifname}",
        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": "Û∞ñ™ Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{ifname}: {ipaddr}",
        "on-click-right": "ghostty -e nmtui"
    },
    "wireplumber#sink": {
        "format": "{icon} {volume}%",
        "format-muted": "ÔÄ¶",
        "format-icons": [
            "ÔÄ¶",
            "ÔÄß",
            "ÔÄ®"
        ],
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 1%-",
        "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ 1%+"
    },
    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": [
            "Û∞Éû",
            "Û∞Éü",
            "Û∞É†"
        ],
        "on-scroll-up": "brightnessctl set +5%",
        "on-scroll-down": "brightnessctl set 5%-"
    },
    "disk": {
        "interval": 30,
        "format": "Û∞ãä {percentage_used}%",
        "path": "/"
    },
    "tray": {
        "icon-size": 20,
        "spacing": 5
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    }
}
